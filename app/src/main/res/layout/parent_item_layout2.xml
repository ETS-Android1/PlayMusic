<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#232029"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/parent_item_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="18sp"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:background="#232029"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:src="@drawable/music"
                    android:id="@+id/img_your_audios7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_below="@+id/img_your_audios7"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toEndOf="@id/img_your_audios7"
                    android:layout_toRightOf="@id/img_your_audios7"
                    android:background="#232029"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="Album"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold"

                        />
                    <TextView

                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:text="12 songs"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="italic"

                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
</LinearLayout>